<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Account"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/login_form_username" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:inputType="text"
                android:id="@+id/create_account_usernameu" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Mobile Number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:inputType="text"
                android:id="@+id/create_account_mnou" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Email address" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:inputType="text"
                android:id="@+id/create_account_addressu" />







            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/login_form_password" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/create_account_passwordu" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#56BCEA"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone"
                android:id="@+id/create_account_submitu"
                android:text="SUBMIT"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pg"></LinearLayout>

</LinearLayout>
