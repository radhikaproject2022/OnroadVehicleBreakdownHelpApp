<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN HERE "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"

        />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:inputType="numberDecimal"
            android:maxLength="10"
            android:hint="Enter Mobile Number"
                android:id="@+id/activity_main_usernameEditText_garagegg" />


            <EditText
                android:hint="Enter Password"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:inputType="textPassword"
                android:id="@+id/activity_main_passwordEditText_garegegg" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#56BCEA"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:id="@+id/activity_main_loginButton_garegegg"
                android:text="@string/login_form_login"
                />



    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#56BCEA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/garage_new_account"
        android:text="NEW ACCOUNT"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pg"></LinearLayout>


</LinearLayout>