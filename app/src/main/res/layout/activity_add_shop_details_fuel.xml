<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Fuel Shop Details"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Shop Id"
                        android:id="@+id/shop_idf" />




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Name"
                        android:id="@+id/shop_namef" />




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Mobile Number"
                        android:id="@+id/mnof" />





                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Email Address"
                        android:id="@+id/emailf" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="City Name"
                        android:id="@+id/city_namef" />



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Area Name"
                        android:id="@+id/area_namef" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Address"
                        android:id="@+id/addressf" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Work Details"
                        android:id="@+id/shop_workf" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Service Charge "
                        android:id="@+id/service_chargef" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="text"
                        android:hint="Owner Name"
                        android:id="@+id/owner_namef" />



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#56BCEA"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:id="@+id/add_shop_submitf"
                        android:text="SUBMIT"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pg"></LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
