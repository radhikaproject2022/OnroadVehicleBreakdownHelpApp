<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".MainActivity">





     <LinearLayout
         android:background="@drawable/pg"
         android:layout_width="match_parent"
         android:layout_height="200dp"></LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">






    <android.support.v7.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="SEARCH GARAGE SHOP" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Select City Name" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/activity_main_city"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#56BCEA"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/activity_main_search"
                android:text="Submit"

                />
        </LinearLayout>

    </android.support.v7.widget.CardView>






            <android.support.v7.widget.CardView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="SEARCH FUEL SHOP" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Select City Name" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/activity_main_city_fuel"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#56BCEA"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:id="@+id/activity_main_search_fuel"
                        android:text="Submit"

                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>




            <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#56BCEA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/activity_main_profile"
        android:text="Profile"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#56BCEA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/activity_main_feedback"
        android:text="Feedback"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#56BCEA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/activity_main_about_us"
        android:text="About Us"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#56BCEA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/activity_main_payment"
        android:text="Payment"

        />




            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#56BCEA"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/activity_main_logout"
                android:text="Logout"

                />



        </LinearLayout>
</ScrollView>

</LinearLayout>
